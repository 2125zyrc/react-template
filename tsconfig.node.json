{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "types": ["vite/client", "node"], // 确保包含 "node" 类型
    "target": "ES2022",
    "lib": ["ES2023", "DOM"], // 添加 "DOM" 如果需要浏览器API
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "resolveJsonModule": true, // 添加此项
    "esModuleInterop": true, // 添加此项
    "outDir": "./dist" // 添加输出目录
  },
  "include": [
    "vite.config.ts",
    "**/*.config.ts", // 包含所有配置文件
    "**/*.config.*.ts" // 包含环境特定的配置文件
  ]
}
